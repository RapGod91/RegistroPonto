        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Tela de Gestão" Height="450" Width="800">
    <Grid>
        <Button Content="Deslogar"
                HorizontalAlignment="Left" VerticalAlignment="Top"
                Margin="20"
                Click="DeslogarButton_Click"/>

        <TextBlock Text="Tela de Gestão" HorizontalAlignment="Center" VerticalAlignment="Center"/>

        <Button x:Name="cadastrarFuncionarioButton" Content="Cadastrar Funcionário" 
        HorizontalAlignment="Left" VerticalAlignment="Bottom"
        Margin="20"
        Click="CadastrarFuncionarioButton_Click"/>

    </Grid>
</Window>
