<Window x:Class="RegistroPonto.Views.GerenciarView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Gerenciar" Height="300" Width="400">
    <Grid>
        <TextBlock Text="Login" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="20" FontSize="18" />
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,20">
            <TextBox Name="loginTextBox" Width="200" Margin="0,10">
                <TextBox.ToolTip>
                    <ToolTip Content="Insira o Login" Visibility="{Binding Text.IsEmpty, RelativeSource={RelativeSource Self}, Converter={StaticResource BoolToVisibilityConverter}}" />
                </TextBox.ToolTip>
            </TextBox>
            <PasswordBox Name="passwordBox" Width="200" Margin="0,10" />
            <Button Content="Entrar" Width="100" Command="{Binding LoginCommand}" />
        </StackPanel>
    </Grid>
</Window>
