<Window x:Class="RegistroPonto.Views.RegistroPontoView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Registrar Ponto" Height="450" Width="800">
    <Grid>
        <Button Content="Voltar"
                HorizontalAlignment="Left" VerticalAlignment="Top"
                Margin="20"
                Click="VoltarButton_Click"/>

        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBox x:Name="IdFuncionarioTextBox" HorizontalAlignment="Left" Width="200" Margin="20,10"/>
            <Button Content="OK" HorizontalAlignment="Left" Margin="20,5" Click="OKButton_Click"/>

        </StackPanel>
    </Grid>
</Window>
