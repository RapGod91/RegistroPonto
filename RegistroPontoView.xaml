<Window x:Class="RegistroPonto.Views.RegistroPontoView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Registrar Ponto" Height="450" Width="800" Background="#F0FFFF">
    <Grid>
        <Button Content="Voltar"
                HorizontalAlignment="Left" VerticalAlignment="Top"
                Margin="20"
                Click="VoltarButton_Click"/>

        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock Text="Digite seu ID:" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,20,0,0" FontSize="16" FontWeight="Bold"/>
            <TextBox x:Name="IdFuncionarioTextBox" HorizontalAlignment="Left" Width="200" Margin="20,10"/>
            <Button Content="OK" HorizontalAlignment="Center" Margin="20,5" Click="OKButton_Click"/>

        </StackPanel>
    </Grid>
</Window>
